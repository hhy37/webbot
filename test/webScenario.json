[
  {
    "description": "Init browser",
    "action": "init",
    "param1": "http://{{ hostname }}:3000"
  },
  {
    "description": "Visit hello",
    "action": "visit",
    "param1": "/hello.html"
  },
  {
    "description": "Trace html",
    "action": "html",
    "disabled": true
  },
  {
    "description": "Check title is Hey and h1 is Hello",
    "action": "assert",
    "param1": "expect(browser.text('title')).to.equal('Hey')",
    "param2": "expect(browser.text('h1')).to.equal('Hello')"
  },
  {
    "description": "Fill form",
    "action": "fill",
    "param1": "input[type=text]",
    "param2": "this is the value"
  },
  {
    "description": "Submit form",
    "action": "press",
    "param1": "input[type=submit]"
  },
  {
    "description": "Wait for page download",
    "action": "wait"
  },
  {
    "description": "Check h1 is 'Done'",
    "action": "assertText",
    "param1": "body > h1",
    "param2": "Done"
  },
  {
    "description": "Check h2 is 'this is the value'",
    "action": "assertText",
    "param1": "body > h2",
    "param2": "this is the value"
  },
  {
    "description": "Check li",
    "action": "assertText",
    "param1": "ul li:nth-child(2)",
    "param2": "2"
  },
  {
    "description": "Go back",
    "action": "back"
  },
  {
    "description": "Check title is Hey and h1 is Hello",
    "action": "assert",
    "param1": "expect(browser.text('title')).to.equal('Hey')",
    "param2": "expect(browser.text('h1')).to.equal('Hello')"
  },
  {
    "description": "Check title is Hey and h1 is Hello",
    "action": "assertText",
    "param1": "body > h3",
    "param2": "{{ currentMonth }}"
  }
]